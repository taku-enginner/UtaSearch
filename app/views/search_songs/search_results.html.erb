<p style="color: green"><%= notice %></p>

<h1 class="text-2xl font-bold mb-4">検索結果</h1>

<div id="search_results" class="grid grid-cols-1 md:grid-cols-4 gap-4">
  <% if @hits.present? %>
    <% @hits.each do |hit| %>
      <div class="mb-4 p-4 bg-white shadow-md rounded-lg">
        <div class="mb-2">
          <p class="text-gray-900 mb-2"><strong class="text-gray-700 text-sm font-bold">Title:</strong> <%= hit["result"]["title"] %></p>
        </div>
        <div class="mb-2">
          <p class="text-gray-900 mb-2"><strong class="text-gray-700 text-sm font-bold">Artist:</strong> <%= hit["result"]["primary_artist"]["name"] %></p>
        </div>
        <div class="text-left">
          <%= link_to "歌詞を見る", lyrics_search_song_path(hit["result"]["id"], url: hit["result"]["url"], title: hit["result"]["title"], artist_name: hit["result"]["primary_artist"]["name"]), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No search results found.</p>
  <% end %>
</div>